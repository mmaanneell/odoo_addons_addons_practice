<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- CONTENU DU SNIPPET -->
    <template id="snippet_animaux" name="Animaux de la clinique">
        <section class="container my-5">
            <h2 class="text-center mb-4">
                Nos animaux !!!
            </h2>

            <div class="row">
                <t t-foreach="request.env['clinique.animal'].sudo().search([])" t-as="animal">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <t t-esc="animal.name"/>
                                </h5>
                                <p class="card-text">
                                    <strong>Espèce :</strong>
                                    <t t-esc="animal.species"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </section>
    </template>

    <!-- DÉCLARATION DANS LE WEBSITE BUILDER -->
    <template id="snippet_animaux_snippet" inherit_id="website.snippets">
        <xpath expr="//section[contains(@class, 'o_snippet_structure')]" position="inside">
            <t t-snippet="clinique_veterinaire.snippet_animaux"
               t-thumbnail="/website/static/src/img/snippets/s_features.svg"/>
        </xpath>
    </template>

</odoo>
