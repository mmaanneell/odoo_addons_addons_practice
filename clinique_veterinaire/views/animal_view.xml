<odoo>
    <record id="view_clinique_animal_tree" model="ir.ui.view">
        <field name="name">clinique.animal.tree</field>
        <field name="model">clinique_animal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="species"/>
                <field name="birth_date"/>
            </list>
        </field>
    </record>

    <record id="action_clinique_animal" model="ir.actions.act_window">
        <field name="name">Animal Clinique</field>
        <field name="res_model">clinique_animal</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_clinique_root" name="Clinique"/>
    <menuitem
        id="menu_clinique_animal"
        name="Animaux"
        parent="menu_clinique_root"
        action="action_clinique_animal"
    />
</odoo>
