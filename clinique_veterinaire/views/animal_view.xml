<?xml version="1.0" encoding="UTF-8"?> <!-- nécessaire?? je ne l'ai pas vu partout -->
<odoo>
    <!-- Les différentes vues (animaux/proprietaires)-->
    <record id="view_clinique_animal_tree" model="ir.ui.view">
        <field name="name">clinique.animal.list</field>
        <field name="model">clinique.animal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="species"/>
                <field name="birth_date"/>
            </list>
        </field>
    </record>

    <record id="view_clinique_proprietaire_tree" model="ir.ui.view">
        <field name="name">clinique.proprietaire.list</field>
        <field name="model">clinique.proprietaire</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone_number"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Actions (Ce qui se passe quand on clique sur le menu...)-->
    <!--"Animaux"-->
    <record id="action_clinique_animaux" model="ir.actions.act_window">
        <field name="name">Clinique Animale</field>
        <field name="res_model">clinique.animal</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--"Proprietaires"-->
    <record id="action_clinique_proprietaires" model="ir.actions.act_window">
        <field name="name">Clinique Animale</field>
        <field name="res_model">clinique.proprietaire</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Tout ce qu'on voit sur la topBar (les menus)-->
    <menuitem
        id="menu_clinique_root"
        name="Clinique Veterinaire"
    />
    <menuitem
        id="menu_clinique_animaux"
        name="Animaux"
        parent="menu_clinique_root"
        action="action_clinique_animaux"
    />
    <menuitem
        id="menu_clinique_proprietaires"
        name="Proprietaires"
        parent="menu_clinique_root"
        action="action_clinique_proprietaires"
    />
</odoo>
