<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="enfant_view_form" model="ir.ui.view">
        <field name="name">enfant_form</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="manger" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="enfant_view_graph" model="ir.ui.view">
        <field name="name">enfant_graph</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <graph string="Enfant">
                <field name="name" type="row" />
                <field name="manger" type="row" />
            </graph>
        </field>
    </record>

    <record id="enfant_view_kanban" model="ir.ui.view">
        <field name="name">enfant_kanban</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="manger" />
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="manger" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="enfant_view_list" model="ir.ui.view">
        <field name="name">enfant_list</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="manger" />
            </list>
        </field>
    </record>

    <record id="enfant_view_pivot" model="ir.ui.view">
        <field name="name">enfant_pivot</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <pivot string="Enfant">
                <field name="name" type="row" />
                <field name="manger" type="row" />
            </pivot>
        </field>
    </record>

    <record id="enfant_view_search" model="ir.ui.view">
        <field name="name">enfant_search</field>
        <field name="model">enfant</field>
        <field name="arch" type="xml">
            <search string="Enfant">
                <field name="name" string="" />
                <field name="manger" string="" />
                <group expand="1" string="Group by">
                    <filter string="" name="groupby_manger" context="{'group_by':'manger'}" />
                </group>
                <searchpanel>
                    <field name="manger" string="" icon="fa-th-list" />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="enfant_enfant_2_action_window" model="ir.actions.act_window">
        <field name="name">enfant</field>
        <field name="res_model">enfant</field>
        <field name="view_mode">kanban,pivot,list,graph,form</field>
    </record>
</odoo>
