<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tomate_view_form" model="ir.ui.view">
        <field name="name">tomate_form</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="poids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tomate_view_graph" model="ir.ui.view">
        <field name="name">tomate_graph</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <graph string="Tomate">
                <field name="name" type="row" />
                <field name="poids" type="measure" />
            </graph>
        </field>
    </record>

    <record id="tomate_view_kanban" model="ir.ui.view">
        <field name="name">tomate_kanban</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="poids" />
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="poids" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="tomate_view_list" model="ir.ui.view">
        <field name="name">tomate_list</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="poids" />
            </list>
        </field>
    </record>

    <record id="tomate_view_pivot" model="ir.ui.view">
        <field name="name">tomate_pivot</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <pivot string="Tomate">
                <field name="name" type="row" />
                <field name="poids" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="tomate_view_search" model="ir.ui.view">
        <field name="name">tomate_search</field>
        <field name="model">tomate</field>
        <field name="arch" type="xml">
            <search string="Tomate">
                <field name="name" string="" />
            </search>
        </field>
    </record>

    <record id="tomate_tomate_3_action_window" model="ir.actions.act_window">
        <field name="name">tomate</field>
        <field name="res_model">tomate</field>
        <field name="view_mode">kanban,pivot,list,graph,form</field>
    </record>
</odoo>
